<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="swe.controllers.RootController"
            prefHeight="400.0" prefWidth="600.0" fx:id="rootPane">
    <top>
        <MenuBar fx:id="menuBar">
            <Menu text="Mode">
                <MenuItem text="New Order" onAction="#newOrder" fx:id="newOrder"/>
                <MenuItem text="Logout" onAction="#logout" fx:id="logOut"/>
                <MenuItem text="Exit" fx:id="exitItem" onAction="#exit"/>
            </Menu>
            <Menu text="Help">
                <MenuItem text="About"/>
            </Menu>
        </MenuBar>
    </top>


</BorderPane>
